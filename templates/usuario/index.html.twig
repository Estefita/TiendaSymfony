{% extends 'base.html.twig' %}

{% block title %}Hello UsuarioController!{% endblock %}

{% block body %}
 <div class="container mb-4">
    <div class="row">
        <div class="col-12">
            <div class="table-responsive">
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th scope="col">Ref</th>
                            <th scope="col">Nombre</th>
                            <th scope="col">Email</th>
                            <th scope="col">Editar</th>
                            <th scope="col">Borrar</th>
                        </tr>
                    </thead>
                    <tbody>
                       {% for item in usuario %}
                            <tr>
                                <td>{{item.id}}</td>
                                <td>{{item.nombre}}</td>
                                <td>{{item.email}}</td>
                                <td><a class="btn btn-sm btn-warning" href="/usuario/editar/{{item.id}}"><i class="fa fa-pencil-square-o"></i>Editar</a> </td>
                                <td><a class="btn btn-sm btn-danger" href="/usuario/borrar/{{item.id}}"><i class="fa fa-trash"></i>Eliminar</a> </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
        <div class="col mb-2">
